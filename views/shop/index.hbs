{{# each products }}
    <div class="row">
        {{# each this}}
            <div class="col">
                <div class="card">
                    <img src="{{ this.imagePath }}" class="card-img-top" alt="..." class="img-responsive">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title}}</h5>
                        <p class="card-text">{{ this.description}}</p>
                        <div class="clearfix">
                            <div class="price float-start">Rs: {{ this.price}}</div>
                            <a href="#" class="btn btn-success float-end" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <br>
{{/each}}
