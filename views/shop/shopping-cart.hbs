<div>
    <h2>Cart</h2>
    <hr>
    {{# if products }}
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col"></th>
                <th scope="col" colspan="2">PRODUCT</th>
                <th scope="col">PRICE</th>
                <th scope="col">QUANTITY</th>
                <th scope="col">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            {{# each products}}
            <tr>
                <th scope="row"><a href="/remove/{{this.item._id}}" class="btn btn-critical float-end" role="button"><i
                            class="fas fa-trash-alt"></i></a></th>
                <td>
                    <img src="{{ this.item.imagePath }}" alt="..." class="img-thumbnail" style="height: 100px;">
                </td>
                <td>{{ this.item.title}}</td>
                <td>Rs. {{ this.item.price}}</td>
                <td>
                    <div class="btn-group col-sm-2" role="group" aria-label="Basic example">
                        <a href="/reduce/{{this.item._id}}" type="button" class="btn btn-secondary col-sm-2">-</a>
                        <input type="text" value="{{ this.qty }}" readonly class="form-control col-sm-2 d-inline">
                        <button type="button" class="btn btn-secondary col-sm-2">+</button>
                    </div>
                </td>
                <td><strong class="float-end">Rs. {{ this.price}}</strong></td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5"><strong class="float-end">Total:</strong></td>
                <td><strong class="float-end">Rs. {{ totalPrice }}</strong></td>
            </tr>
        </tfoot>
    </table>
    <div class="row">
        <div>
            <a href="/checkout" type="button" class="btn btn-success float-end">Checkout</a>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="text-center">
            <h2>No Items in Cart</h2>
        </div>
    </div>
    {{/if}}
</div>
